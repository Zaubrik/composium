{
  "tasks": {
    "test": "deno test --check --doc --unstable --allow-all",
    "bundle": "deno bundle --check url-pattern/src/index.ts > url-pattern/dist/index.js",
    "serve": "deno run --check -A url-pattern/server.ts"
  },
  "compilerOptions": {
    "lib": ["esnext", "dom", "dom.iterable", "deno.ns"],
    "strict": true,
    "importsNotUsedAsValues": "preserve",
    "useUnknownInCatchVariables": true,
    "noImplicitOverride": false,
    "checkJs": true
  }
}
